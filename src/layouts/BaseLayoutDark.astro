---
// Props
const { title } = Astro.props;

// Imports
import "/public/styles/global-no-underline.css";
import Header from '../components/headerDark.astro';
import Footer from '../components/footerDark.astro';
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>{title || 'Henris Bahnsteigende'}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/styles/global.css" rel="stylesheet" />
  </head>

  <body class="bg-black text-white font-sans flex flex-col min-h-screen">
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
  </body>
</html>